{
    "manifest_version": 3,
    "name": "Chess Tile Highlighter",
    "version": "1.0",
    "description": "Highlights Chess.com tiles based on the pieces attacking them.",
    "permissions": ["activeTab"],
    "host_permissions": ["https://www.chess.com/*"],
    "content_scripts": [
        {
            "matches": ["https://www.chess.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}
